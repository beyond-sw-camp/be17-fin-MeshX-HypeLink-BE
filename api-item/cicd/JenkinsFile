pipeline {
  agent {
    kubernetes {
      label "gradle-kaniko-${UUID.randomUUID().toString()}"
      defaultContainer 'gradle'
      yaml """
apiVersion: v1
kind: Pod
metadata:
  namespace: hypelink
spec:
  restartPolicy: Never
  containers:
    - name: gradle
      image: gradle:8.9-jdk17
      command: ['cat']
      tty: true
      volumeMounts:
        - name: gradle-cache
          mountPath: /home/gradle/.gradle
        - name: workspace
          mountPath: /workspace
    - name: kaniko
      image: gcr.io/kaniko-project/executor:debug
      command: ['/busybox/sh','-c','sleep infinity']
      tty: true
      volumeMounts:
        - name: docker-config
          mountPath: /kaniko/.docker
        - name: workspace
          mountPath: /workspace
  volumes:
    - name: gradle-cache
      emptyDir: {}
    - name: workspace
      emptyDir: {}
    - name: docker-config
      secret:
        secretName: dockerhub-cred
        items:
          - key: .dockerconfigjson
            path: config.json
"""
    }
  }

  environment {
    docker_name = 'raccoon98'
    GIT_URL = 'https://github.com/beyond-sw-camp/be17-fin-MeshX-HypeLink-BE'

    IMAGE_NAME = "${docker_name}/hypelink-api-item"
    IMAGE_TAG = "${env.BUILD_NUMBER}"

    DISCORD_WEBHOOK_URL = credentials('discord-webhook-back')
  }

  stages {

    /* -------------------
       Checkout
    ------------------- */
    stage('Checkout') {
      steps {
        container('gradle') {
          checkout([$class: 'GitSCM',
            branches: [[name: '*/main']],
            userRemoteConfigs: [[url: "${GIT_URL}"]]
          ])
        }
      }
    }

    /* -------------------
       File Structure Check
    ------------------- */
    stage('Check File Structure') {
      steps {
        container('gradle') {
          sh '''
            echo "=== PROJECT ROOT ==="
            ls -la ${WORKSPACE}

            echo "=== api-item ==="
            ls -la ${WORKSPACE}/api-item || true
            ls -la ${WORKSPACE}/api-item/Dockerfile || true
            ls -la ${WORKSPACE}/api-item/build/libs || true
          '''
        }
      }
    }

    /* -------------------
       Gradle Build
    ------------------- */
    stage('Gradle Build (api-item)') {
      steps {
        container('gradle') {
          sh '''
            cd api-item
            chmod +x ./gradlew || true
            ./gradlew --no-daemon clean bootJar
            ls -la build/libs
          '''
        }
      }
    }

    /* -------------------
       Kaniko Build
    ------------------- */
    stage('Kaniko Build & Push') {
      steps {
        container('kaniko') {
          catchError(buildResult: 'FAILURE', stageResult: 'FAILURE') {
            sh """
              /kaniko/executor \\
                --context=${WORKSPACE}/api-item \\
                --dockerfile=${WORKSPACE}/api-item/Dockerfile \\
                --destination=${IMAGE_NAME}:${IMAGE_TAG} \\
                --destination=${IMAGE_NAME}:latest \\
                --single-snapshot \\
                --use-new-run \\
                --cache=true \\
                --snapshotMode=redo
            """
          }
        }
      }
    }

    /* -------------------
       Blue/Green Deployment
    ------------------- */
    stage('Deploy to Kubernetes (Blue/Green for api-item)') {
      steps {
        echo "Deploying api-item to Kubernetes (Blue/Green)"
        catchError(buildResult: 'FAILURE', stageResult: 'FAILURE') {
          sshPublisher(
            continueOnError: false,
            failOnError: true,
            publishers: [
              sshPublisherDesc(
                configName: 'K8S_MASTER',
                verbose: true,
                transfers: [
                  sshTransfer(
                    execCommand: """
                      IMAGE_TAG="${IMAGE_TAG}"
                      echo "[DEBUG] IMAGE_TAG=\$IMAGE_TAG"

                      # ÌòÑÏû¨ service selector.ver ÏùΩÍ∏∞
                      if kubectl get service hypelink-item-svc -n hypelink >/dev/null 2>&1; then
                        VER=\$(kubectl get service hypelink-item-svc -n hypelink -o jsonpath='{.spec.selector.ver}')
                        echo "[DEBUG] CURRENT VER=\$VER"
                      else
                        VER=""
                        echo "[DEBUG] SERVICE DOES NOT EXIST (initial deploy)"
                      fi

                      # Îã§Ïùå Î∞∞Ìè¨ color Í≤∞Ï†ï
                      if [ -z "\$VER" ]; then
                        NEW_VER="blue"
                      elif [ "\$VER" = "blue" ]; then
                        NEW_VER="green"
                      else
                        NEW_VER="blue"
                      fi

                      echo "ÌòÑÏû¨ Î≤ÑÏ†Ñ: \${VER:-ÏóÜÏùå}"
                      echo "ÏÉà Î≤ÑÏ†Ñ: \$NEW_VER"


##############################
# üöÄ api-item Deployment Ï†ÅÏö©
##############################

cat <<EOF | kubectl apply -f -
apiVersion: apps/v1
kind: Deployment
metadata:
  name: spring-item-deployment-\$NEW_VER
  namespace: hypelink
spec:
  replicas: 1
  selector:
    matchLabels:
      type: item
      ver: \$NEW_VER
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%
  template:
    metadata:
      labels:
        type: item
        ver: \$NEW_VER
    spec:
      containers:
        - name: container
          image: ${docker_name}/hypelink-api-item:\$IMAGE_TAG
          imagePullPolicy: Always
          ports:
            - containerPort: 8080
              protocol: TCP
          env:
            - name: POD_IP
              valueFrom:
                fieldRef:
                  apiVersion: v1
                  fieldPath: status.podIP
          envFrom:
            - configMapRef:
                name: hypelink-item-config
          resources:
            limits:
              cpu: "500m"
              memory: "1Gi"
            requests:
              cpu: "250m"
              memory: "512Mi"
          livenessProbe:
            httpGet:
              path: /api/health/health
              port: 8080
            initialDelaySeconds: 10
            periodSeconds: 10
            timeoutSeconds: 1
            failureThreshold: 3
          readinessProbe:
            httpGet:
              path: /api/health/info
              port: 8080
            initialDelaySeconds: 10
            periodSeconds: 5
            timeoutSeconds: 1
            failureThreshold: 3
          startupProbe:
            httpGet:
              path: /api/health/health
              port: 8080
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 1
            failureThreshold: 24
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
EOF

                      echo "[DEBUG] deployment(spring-item-deployment-\$NEW_VER) Ï†ÅÏö©Îê®"

                      # rollout ÏôÑÎ£å ÎåÄÍ∏∞
                      kubectl rollout status deployment/spring-item-deployment-\$NEW_VER -n hypelink --timeout=600s


##############################
# üöÄ Service Blue/Green Ï†ÑÌôò
##############################

cat <<EOF | kubectl apply -f -
apiVersion: v1
kind: Service
metadata:
  name: hypelink-item-svc
  namespace: hypelink
spec:
  selector:
    type: item
    ver: \$NEW_VER
  ports:
  - port: 8080
    targetPort: 8080
  type: ClusterIP
EOF

                      echo "[DEBUG] Service(hypelink-item-svc) ver=\$NEW_VER Ï†ÅÏö© ÏôÑÎ£å"


##############################
# üöÄ Ïù¥Ï†Ñ Î≤ÑÏ†Ñ Scale Down
##############################

                      if [ -n "\$VER" ]; then
                        echo "Ïù¥Ï†Ñ Î≤ÑÏ†Ñ Ïä§ÏºÄÏùº Îã§Ïö¥: spring-item-deployment-\$VER"
                        kubectl scale deployment/spring-item-deployment-\$VER -n hypelink --replicas=0
                      fi

                    """
                  )
                ]
              )
            ]
          )
        }
      }
    }

    /* -------------------
       Build Result
    ------------------- */
    stage('Result') {
      steps {
        echo "Pushed and Deployed: ${IMAGE_NAME}:${IMAGE_TAG}"
      }
    }
  }

  /* -------------------
     Discord Notification
  ------------------- */
  post {
    success {
      script {
        sh """
          curl -X POST -H 'Content-Type: application/json' \
            -d '{
              "embeds": [{
                "title": "api-item ÎπåÎìú & Î∞∞Ìè¨ ÏÑ±Í≥µ",
                "description": "Ïù¥ÎØ∏ÏßÄ: ${IMAGE_NAME}:${IMAGE_TAG}\\nÎπåÎìú Î≤àÌò∏: ${env.BUILD_NUMBER}",
                "color": 65280
              }]
            }' \
            ${DISCORD_WEBHOOK_URL}
        """
      }
    }
    failure {
      script {
        sh """
          curl -X POST -VISIBLE 'Content-Type: application/json' \
            -d '{
              "embeds": [{
                "title": "api-item ÎπåÎìú Ïã§Ìå®",
                "description": "ÎπåÎìú Î≤àÌò∏: ${env.BUILD_NUMBER}",
                "color": 16711680
              }]
            }' \
            ${DISCORD_WEBHOOK_URL}
        """
      }
    }
  }
}
