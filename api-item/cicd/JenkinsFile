pipeline {
  agent {
    kubernetes {
      label "gradle-kaniko-${UUID.randomUUID().toString()}"
      defaultContainer 'gradle'
      yaml """
apiVersion: v1
kind: Pod
metadata:
  namespace: hypelink
spec:
  restartPolicy: Never
  containers:
    - name: gradle
      image: gradle:8.9-jdk17
      command: ['cat']
      tty: true
      volumeMounts:
        - name: gradle-cache
          mountPath: /home/gradle/.gradle
        - name: workspace
          mountPath: /workspace
    - name: kaniko
      image: gcr.io/kaniko-project/executor:debug
      command: ['/busybox/sh','-c','sleep infinity']
      tty: true
      volumeMounts:
        - name: docker-config
          mountPath: /kaniko/.docker
        - name: workspace
          mountPath: /workspace
  volumes:
    - name: gradle-cache
      emptyDir: {}
    - name: workspace
      emptyDir: {}
    - name: docker-config
      secret:
        secretName: dockerhub-cred
        items:
          - key: .dockerconfigjson
            path: config.json
"""
    }
  }

  environment {
    docker_name = 'raccoon98'
    GIT_URL = 'https://github.com/beyond-sw-camp/be17-fin-MeshX-HypeLink-BE'

    IMAGE_NAME = "${docker_name}/hypelink-api-item"
    IMAGE_TAG = "${env.BUILD_NUMBER}"

    DISCORD_WEBHOOK_URL = credentials('discord-webhook-back')
  }

  stages {

    /* -------------------------------------------------------
         1) Git Plugin ê¸°ë°˜ Webhook/Manual Branch Filter
       ------------------------------------------------------- */
    stage('Check Branch') {
      steps {
        script {
          def branch = env.GIT_BRANCH ?: env.BRANCH_NAME ?: ""

          echo "Detected Jenkins Branch = '${branch}'"

          // ìˆ˜ë™ ë¹Œë“œ â†’ env.GIT_BRANCH ì—†ìŒ â†’ ë¬´ì¡°ê±´ í—ˆìš©
          if (!branch?.trim()) {
            echo "âš ï¸ Manual build detected â†’ Skip branch filter"
            return
          }

          // Webhook case
          def allow1 = "origin/Swagger/MSA"
          def allow2 = "Swagger/MSA"

          if (branch != allow1 && branch != allow2) {
            echo "â›” Webhook from disallowed branch â†’ stop"
            currentBuild.result = "SUCCESS"
            error("STOP")
          }

          echo "âœ… Webhook from allowed branch (${branch}) â†’ continue"
        }
      }
    }

    /* -------------------------------------------------------
         2) Checkout
       ------------------------------------------------------- */
    stage('Checkout') {
      steps {
        container('gradle') {
          script {
            echo "ğŸ“¥ Checking out branch: Swagger/MSA"

            checkout([$class: 'GitSCM',
              branches: [[name: "*/Swagger/MSA"]],
              userRemoteConfigs: [[url: "${GIT_URL}"]]
            ])
          }
        }
      }
    }

    /* -------------------------------------------------------
         3) File Structure Check
       ------------------------------------------------------- */
    stage('Check File Structure') {
      steps {
        container('gradle') {
          sh '''
            echo "=== WORKSPACE ROOT ==="
            ls -la ${WORKSPACE}

            echo "=== api-item ==="
            ls -la ${WORKSPACE}/api-item || true
            ls -la ${WORKSPACE}/api-item/Dockerfile || true
            ls -la ${WORKSPACE}/api-item/build/libs || true
          '''
        }
      }
    }

    /* -------------------------------------------------------
         4) Gradle Build
       ------------------------------------------------------- */
    stage('Gradle Build (api-item)') {
      steps {
        container('gradle') {
          sh '''
            cd api-item
            chmod +x ../gradlew || true
            ../gradlew --no-daemon clean bootJar -x test
            ls -la build/libs
          '''
        }
      }
    }

    /* -------------------------------------------------------
         5) Kaniko Build
       ------------------------------------------------------- */
    stage('Kaniko Build & Push') {
      steps {
        container('kaniko') {
          catchError(buildResult: 'FAILURE', stageResult: 'FAILURE') {
            sh """
              /kaniko/executor \\
                --context=${WORKSPACE}/api-item \\
                --dockerfile=${WORKSPACE}/api-item/Dockerfile \\
                --destination=${IMAGE_NAME}:${IMAGE_TAG} \\
                --destination=${IMAGE_NAME}:latest \\
                --single-snapshot \\
                --use-new-run \\
                --cache=true \\
                --snapshotMode=redo
            """
          }
        }
      }
    }

    /* -------------------------------------------------------
         6) Deploy to Kubernetes (Blue/Green)
       ------------------------------------------------------- */
    stage('Deploy to Kubernetes (Blue/Green for api-item)') {
      steps {
        echo "ğŸš€ Deploying api-item to Kubernetes (Blue/Green)"
        catchError(buildResult: 'FAILURE', stageResult: 'FAILURE') {

          sshPublisher(
            continueOnError: false,
            failOnError: true,
            publishers: [
              sshPublisherDesc(
                configName: 'K8S_MASTER',
                verbose: true,
                transfers: [
                  sshTransfer(
                    execCommand: """
                      IMAGE_TAG="${IMAGE_TAG}"

                      # í˜„ì¬ í™œì„± ë²„ì „ í™•ì¸
                      if kubectl get service hypelink-item-svc -n hypelink >/dev/null 2>&1; then
                        VER=\$(kubectl get service hypelink-item-svc -n hypelink -o jsonpath='{.spec.selector.ver}')
                      else
                        VER=""
                      fi

                      # ë‹¤ìŒ ë²„ì „ ì„ íƒ
                      if [ -z "\$VER" ]; then NEW_VER="blue";
                      elif [ "\$VER" = "blue" ]; then NEW_VER="green";
                      else NEW_VER="blue"; fi

                      echo "í˜„ì¬ ë²„ì „: \${VER:-ì—†ìŒ}"
                      echo "ìƒˆ ë²„ì „: \$NEW_VER"

##############################
# ğŸš€ api-item Deployment ìƒì„±
##############################
cat <<EOF | kubectl apply -f -
apiVersion: apps/v1
kind: Deployment
metadata:
  name: spring-item-deployment-\$NEW_VER
  namespace: hypelink
spec:
  replicas: 1
  selector:
    matchLabels:
      type: item
      ver: \$NEW_VER
  template:
    metadata:
      labels:
        type: item
        ver: \$NEW_VER
    spec:
      containers:
        - name: container
          image: ${docker_name}/hypelink-api-item:\$IMAGE_TAG
          imagePullPolicy: Always
          ports:
            - containerPort: 8080
          envFrom:
            - configMapRef:
                name: hypelink-item-config
          livenessProbe:
            httpGet:
              path: /api/health/health
              port: 8080
          readinessProbe:
            httpGet:
              path: /api/health/info
              port: 8080
          startupProbe:
            httpGet:
              path: /api/health/health
              port: 8080
EOF

                      kubectl rollout status deployment/spring-item-deployment-\$NEW_VER -n hypelink --timeout=600s


##############################
# Service Blue/Green ì „í™˜
##############################
cat <<EOF | kubectl apply -f -
apiVersion: v1
kind: Service
metadata:
  name: hypelink-item-svc
  namespace: hypelink
spec:
  selector:
    type: item
    ver: \$NEW_VER
  ports:
    - port: 8080
      targetPort: 8080
EOF

##############################
# ì´ì „ ë²„ì „ Scale Down
##############################
                      if [ -n "\$VER" ]; then
                        kubectl scale deployment/spring-item-deployment-\$VER -n hypelink --replicas=0
                      fi
                    """
                  )
                ]
              )
            ]
          )
        }
      }
    }

    /* -------------------------------------------------------
         7) Result
       ------------------------------------------------------- */
    stage('Result') {
      steps {
        echo "âœ” api-item ë°°í¬ ì™„ë£Œ: ${IMAGE_NAME}:${IMAGE_TAG}"
      }
    }
  }

  /* -------------------------------------------------------
       Discord Notification
     ------------------------------------------------------- */
  post {
    success {
      script {
        sh """
          curl -X POST -H 'Content-Type: application/json' \
            -d '{"embeds":[{"title":"api-item ë°°í¬ ì„±ê³µ","description":"${IMAGE_NAME}:${IMAGE_TAG}","color":65280}]}' \
            ${DISCORD_WEBHOOK_URL}
        """
      }
    }
    failure {
      script {
        sh """
          curl -X POST -H 'Content-Type: application/json' \
            -d '{"embeds":[{"title":"api-item ë°°í¬ ì‹¤íŒ¨","description":"ë¹Œë“œ ë²ˆí˜¸: ${env.BUILD_NUMBER}","color":16711680}]}' \
            ${DISCORD_WEBHOOK_URL}
        """
      }
    }
  }
}
